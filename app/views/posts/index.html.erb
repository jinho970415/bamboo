<style>
    
    input[type="submit"] {
  cursor: pointer;
  width: 200px;
  border: none;
  background: #4CAF50;
  color: #FFF;
  margin: 0 0 5px;
  padding: 10px;
  font-size: 30px;
  }

.main_wrapper {

margin: 3rem 0;

}
body {

font-family: "Roboto", Helvetica, Arial, sans-serif;

font-weight: 100;

font-size: 12px;

line-height: 30px;
text-align: center;

color: #777;

background-image:linear-gradient(120deg, #d4fc79 0%, #96e6a1 100%);

}


.container {

max-width: 900px;

width: 100%;

margin: 5% auto;

padding: 2rem;

position: relative;

background-color: #eeeeee;

box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);

}

input[type='text'], textarea {
 width: 100%;
 border: 1px solid #ccc;
 background: #FFF;
 margin: 0 0 5px;
 padding: 10px;
 
 
</style>



<div class='container'>

<h1> SKKU Bamboo Forest</h1>
<p>자유롭게 글을 남겨주세요</p>


<%= form_for @post do |f| %>

   <%= f.label :name%>

 <%= f.text_field :name %><br><br>

   <%= f.label :content %>

   <%= f.text_area :content %><br><br>

   <%= f.submit %>

<% end %>


<section class="main_wrapper">

<% @posts.each do |post| %>

   <div class="panel panel-default">

     <div class="panel-heading">
         <div class="article_header">
              
              <div class="header_title">
                <h5>SKKU Bamboo Forest</h5>
                
              </div>
     
        <h5 style='float: right'><%= post.created_at.strftime('%Y %B %-d') %></h5>

       <h3 class="panel-title">#<%= post.id %>번째 글 | <%= post.name %>님의 외침</h3>

     </div>

     <div class="panel-body">

       <%= post.content %>

     </div>

   </div>

<% end %>

</section>
</div>






